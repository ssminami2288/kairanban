<style>
  body {
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    min-height: 100vh; /* 画面の高さいっぱいに伸ばす */
  }
  main {
    flex: 1; /* メインコンテンツが残りのスペースをいっぱい使う */
  }
  footer small {font-size: 100%;}
  footer {
    font-size: 0.7rem;		/*文字サイズ。bodyのfont-sizeの70%です。*/
    text-align: center;		/*内容をセンタリング*/
    padding: 20px;			/*ボックス内の余白*/
    color: #fff;			/*文字色*/
    background: #f88989;		/*背景色。css冒頭で指定しているテーマカラーを読み込みます*/
  }

  footer a {color: inherit;text-decoration: none;}

  footer .pr {display: block;}
</style>

<body>
  <%= stylesheet_link_tag 'registrations/new' %>
  <%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
    <h1 id="logo">
      <%= image_tag 'logo.jpeg', alt: 'Logo' %>
    </h1>
    <div class="form-wrapper">
      <h1>新規登録</h1>
      <div class="form-item">
        <%= f.text_field :last_name, placeholder: '名字', required: true %>
      </div>
      <div class="form-item">
        <%= f.text_field :first_name, placeholder: '名前', required: true %>
      </div>
      <div class="form-item">
        <%= f.text_field :room_number, placeholder: '部屋番号', required: true %>
      </div>
      <div class="form-item">
        <%= f.email_field :email, placeholder: 'メールアドレス', required: true %>
      </div>
      <div class="form-item">
        <%= f.password_field :password, placeholder: 'パスワード', required: true %>
      </div>
      <div class="button-panel">
        <%= f.submit '登録', class: 'button' %>
      </div>
    </div>
  <% end %>
  <br>
  <br>
  <%= render "devise/shared/footer" %>
</body>
