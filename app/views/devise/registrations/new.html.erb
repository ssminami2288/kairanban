<%= stylesheet_link_tag 'registrations/new' %>
<%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
  <h1 id="logo">
    <%= image_tag 'logo.jpeg', alt: 'Logo' %>
  </h1>
  <div class="form-wrapper">
    <h1>新規登録</h1>
    <div class="form-item">
      <%= f.text_field :last_name, placeholder: '名字', required: true %>
    </div>
    <div class="form-item">
      <%= f.text_field :first_name, placeholder: '名前', required: true %>
    </div>
    <div class="form-item">
      <%= f.text_field :room_number, placeholder: '部屋番号', required: true %>
    </div>
    <div class="form-item">
      <%= f.email_field :email, placeholder: 'メールアドレス', required: true %>
    </div>
    <div class="form-item">
      <%= f.password_field :password, placeholder: 'パスワード', required: true %>
    </div>
    <div class="button-panel">
      <%= f.submit '登録', class: 'button' %>
    </div>
  </div>
<% end %>
<br>
<br>
<%= render "devise/shared/footer" %>
