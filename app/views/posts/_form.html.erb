<%= form_with(model: @post, local: true) do |form| %>
  <div>
    <%= form.label :date, '日付' %>
    <%= form.date_field :date %>
  </div>
  <br>
  <div>
    <%= form.label :title, 'タイトル' %>
    <%= form.text_field :title %>
  </div>
  <br>
  <div class="form-group">
    <%= form.label :text, '内容' %>
    <%= form.text_area :text %>
  </div>
  <br>
  <div class="file-group">
    <div>
      <%= form.label :pdfs, 'ファイルを添付' %>
    </div>
    <br>
    <div class="file-group">
      <% if @post.pdfs.attached? %>
        <% @post.pdfs.each do |pdf| %>
          <%= link_to pdf.filename, pdf %>
        <% end %>
      <% end %>
      <%= form.file_field :pdfs, multiple: true, accept: 'application/pdf,image/png,image/jpeg' %>
      <% if @post.pdfs.attached? %>
        <%= form.hidden_field :pdfs, value: @post.pdfs.map(&:signed_id).join(',') %>
      <% end %>
    </div>
  <br>
  <div>
    <%= form.submit submit_button_text, class: 'submit-button' %>
  </div>
<% end %>