<%= form_with(model: @post, local: true) do |form| %>
  <div>
    <%= form.label :date, '日付' %>
    <%= form.date_field :date %>
  </div>
  <br>
  <div>
    <%= form.label :title, 'タイトル' %>
    <%= form.text_field :title %>
  </div>
  <br>
  <div class="form-group">
    <%= form.label :text, '内容' %>
    <%= form.text_area :text %>
  </div>
  <br>
  <% if @post.pdfs.attached? %>
    <div>
      <% @post.pdfs.each do |pdf| %>
        <div><%= link_to pdf.filename, pdf %></div>
      <% end %>
    </div>
  <% end %>

  <%= form_with(model: @post, url: posts_path, local: true, html: { multipart: true, class: 'center-form' }) do |form| %>
    <div>
      <%= form.label :pdfs, hidden: true %>
    </div>
    <div class="file-group">
      <%= form.file_field :pdfs, multiple: true, accept: 'application/pdf,image/png,image/jpeg' %>
      <% if @post.pdfs.attached? %>
        <% @post.pdfs.each do |pdf| %>
          <%= form.hidden_field :pdfs, value: pdf.signed_id %>
        <% end %>
      <% end %>
    </div>
  <% end %>
  <br>
<% end %>